week = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]



puts "Input a number between 1 and 7"
  r = gets.chomp.to_i
  day = week[r-1]


random = week.sample
random_index = week.index(random)

if r <= 7 && r >= 1
message = "Day #{r} of the week is #{day} "

else
message = "Day #{random_index + 1} of the week is #{random} "

end

puts (message)
